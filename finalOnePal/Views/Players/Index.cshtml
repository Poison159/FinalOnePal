@model IEnumerable<finalOnePal.Models.Player>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center label-info" style="font-family:Cooper; border-radius:5px;">League Players </h2>
<div class="jumbotron" style="padding-top:0px; background-color:transparent">
    <p>
        @using (Html.BeginForm("Index", "Players", FormMethod.Get))
            {
        <p style="font-family:'Segoe Print'; float:left; padding-top:0px;">
            Name @Html.TextBox("searchName")   Position: @Html.DropDownList("position", "All")
            <input type="submit" value="search" />
        </p>
        }
        </p>
    </div>

    <table class="table table-striped table-bordered" style="font-size:medium">
        <tr  style="font-family:Cooper; font-size:inherit">
            <th>
                @Html.DisplayNameFor(model => model.team.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.goals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.assists)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cleanSheets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gamesPlayed)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.team.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.goals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.assists)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cleanSheets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gamesPlayed)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    <p style="float:right; border-radius:10px;" class="btn-default btn-lg">
        @Html.ActionLink("Create New", "Create")
    </p>