@model IEnumerable<finalOnePal.Models.Team>

@{
    ViewBag.Title = "Index";
}
<h2 class="text-center label-info" style="font-family:Cooper; border-radius:5px">League teams</h2>
<div class="jumbotron" style="padding-top:0px; background-color:transparent">
    <p>
        @using (Html.BeginForm("Index", "Teams", FormMethod.Get))
            {
        <p style="font-family:'Segoe Print'; float:left; padding-top:0px;">
            Name @Html.TextBox("searchName")   Kasi: @Html.DropDownList("kasi", "All")
            <input type="submit" value="search" />
        </p>
        }
        </p>
    </div>
    <table class="table table-striped table-bordered" style="font-size:medium">
        <tr style="font-family:Cooper; font-size:inherit">
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kasi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gamesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gamesWon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gamesDrawn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gamesLost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.goalDiff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.goalsFor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.goalsAgainst)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kasi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gamesPlayed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gamesWon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gamesDrawn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gamesLost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.goalDiff)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.goalsFor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.goalsAgainst)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "btn btn-sm btn-primary glyphicon glyphicon-edit label-info" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-primary glyphicon glyphicon-list label-info" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "btn btn-sm btn-primary glyphicon glyphicon-stop label-info" })
                </td>
            </tr>
        }
    </table>
    <p style="float:right; border-radius:10px;" class="btn-default btn-lg">
        @Html.ActionLink("Create New", "Create")
    </p>