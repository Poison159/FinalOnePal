@model IEnumerable<finalOnePal.Models.Team>

@{
    ViewBag.Title = "Tournament";
}

<h2>Tournament</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    @foreach (var item in ViewBag.Groups)
    {
       
        <div class="col-md-6">
            <h4 class="text-center label-info" style="border-radius:10px;">Group @item</h4>
                <table class="table table-condensed table-striped table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.gamesPlayed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.gamesWon)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.gamesDrawn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.gamesLost)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.points)
                        </th>

                    </tr>
                    @foreach (var thing in Model.Where(x => x.group == item).OrderByDescending(x=>x.points))
                    {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "Teams", new { id = thing.id })">@thing.name</a>
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => thing.gamesPlayed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => thing.gamesWon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => thing.gamesDrawn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => thing.gamesLost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => thing.points)
                        </td>
                    </tr>
                    }
                </table>
        </div>

    } 
</div>

